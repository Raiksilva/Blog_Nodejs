<%- include("../../partials/header.ejs") %>
<body>
  <div class="wrapper">
    <hr />
    <div class="container">
      <div class="card">
        <card class="card-header" style="background-color: #0a0822">
          <h2 style="color: white">Login administrativo</h2>
        </card>
        <div class="card-body bg-dark">
          <% if(errorMessage) {%>
          <div class="alert alert-danger"><%= errorMessage %></div>
          <% } %>
          <form method="post" action="/authenticate">
            <input
              class="form-control"
              name="email"
              type="email"
              placeholder="email@exemplo.com"
            />
            <br />
            <input
              class="form-control"
              name="password"
              type="password"
              placeholder="senha"
            />
            <br />
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">logar</button>
            </div>
            <br />
            <div class="d-grid gap-2 col-6 mx-auto">
              <form method="post" action="/admin/back">
                <a href="/" class="btn btn-light" style="float: right"
                  >Voltar</a
                >
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("../../partials/footer.ejs") %>
  </div>
</body>
<%- include("../../partials/footerScript.ejs") %>
