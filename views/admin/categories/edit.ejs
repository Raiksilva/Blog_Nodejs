<%- include("../../partials/header.ejs") %>
<body>
  <%- include("../../partials/navbar.ejs") %>
  <div class="wrapper">
    <hr />
    <div class="container">
      <div class="card">
        <div class="card-header" style="background-color: #0a0822">
          <h2 style="color: white">Edição de categoria</h2>
        </div>
        <div class="card-body bg-dark">
          <form method="post" action="/categories/update" id="form-category">
            <input
              class="form-control"
              type="text"
              name="title"
              placeholder="Defina o título da categoria"
              value="<%= category.title %>"
            />
            <input type="hidden" name="id" value="<%= category.id %>" />
            <br /><button class="btn btn-success">Atualizar</button>
            <form method="post" action="/categories/back">
              <a
                href="/admin/categories/category/<%= category.slug %>"
                class="btn btn-light"
                style="float: right"
                >Voltar</a
              >
            </form>
          </form>
        </div>
      </div>
    </div>
    <%- include("../../partials/footer.ejs") %>
  </div>
</body>
<%- include("../../partials/footerScript.ejs") %>
