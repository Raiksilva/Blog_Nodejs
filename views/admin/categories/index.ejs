<%- include("../../partials/header") %>
<body>
  <div class="wrapper">
    <%- include("../../partials/navbar") %>
    <hr />
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <h2 style="color: white">Categorias</h2>
        </div>
        <a class="btn btn-success w-auto" href="/admin/categories/new"
          >Criar nova categoria</a
        >
      </div>

      <hr />
      <div class="col-12">
        <div class="table-responsive w-auto p-3">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th style="background-color: #0a0822; color: white">ID</th>
                <th style="background-color: #0a0822; color: white">TÃ­tulo</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(category => { %>
              <tr>
                <td scope="row" class="bg-dark" style="color: white">
                  <%= category.id %>
                </td>
                <td scope="row" class="bg-dark" style="color: white">
                  <a
                    style="color: white"
                    href="/admin/categories/category/<%= category.slug %>"
                    ><%= category.title %></a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%- include("../../partials/footer") %>
  </div>
</body>
<%- include("../../partials/footerScript") %>
