<%- include("../../partials/header.ejs")%>
<body>
    <%- include("../../partials/navbar.ejs") %>
    <div class="wrapper">
       <hr>
       <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Edição de artigo</h2>
            </div>
            <div class="card-body" >
                <form method="post" action="/articles/update">
                    <input type="hidden" value="<%= article.id %>" name="id">
                    <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo" value="<%= article.title %>">
                    <br><textarea class="form-control" placeholder="Escreva seu artigo aqui!!" name="body" id="article"><%- article.body %></textarea>
                    <br>
                    <label>Categorias</label> 
                    <select name="category" class="form-control">
                        <% categories.forEach((category) =>{ %>
                            <% if(category.id == article.categoryId) { %>
                                <option value="<%= category.id %>" selected ><%= category.title %></option>                                
                                <% }else{ %>

                                    <option value="<%= category.id %>"><%= category.title %></option>
                                <% } %>

                        <% }) %>
                    </select>
                    <br><button class="btn btn-success">Atualizar</button>
                    <form method="post" action="/articles/back">
                        <button class="btn btn-warning" style="float: right;">Voltar</button>
                    </form>  
                </form>  
                           
            </div>
        </div>
    </div>
        <%- include("../../partials/footer.ejs") %>
    </div>
</body>
<div id="content" style="display: none;">
        <%- article.body %>
        </div>
<%- include("../../partials/footerScript.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: "pt_BR",
        selector: "#article",
        activeEditor: true,
        plugins: [
        "preview",
        "advlist",
        "autolink",
        "link",
        "image",
        "lists",
        "searchreplace",
        "wordcount",
        "fullscreen",
        "insertdatetime",
        "media",
        "save",
        "table",
        "emoticons",
        "code",
        ],
        init_instance_callback: () => {
            tinymce.get("article").setContent($("#content").html());
        }
    });
</script>

